{
  "family": "cicd-demo",
  "containerDefinitions": [
    {
      "name": "cicd-demo",
      "image": "cicd-demo:latest",
      "entryPoint": ["sh", "-c"],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/cicd-demo",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "memory": "1024",
  "cpu": "256",
  "requiresCompatibilities": ["EC2"]
}
